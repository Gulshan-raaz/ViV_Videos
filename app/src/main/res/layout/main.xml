<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/main_linear"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear_ads"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/ad"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:padding="10dp"
					android:orientation="horizontal"/>
				<LinearLayout
					android:id="@+id/linear8"
					android:layout_width="match_parent"
					android:layout_height="55dp"
					android:background="#FFFF00"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/imageview2"
						android:layout_width="40dp"
						android:layout_height="40dp"
						android:layout_marginLeft="10dp"
						android:src="@drawable/vsh"
						android:scaleType="centerInside"/>
					<TextView
						android:id="@+id/textview2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_marginRight="10dp"
						android:padding="8dp"
						android:text="Latest"
						android:textSize="16sp"
						android:textStyle="bold"
						android:textColor="#000000"/>
					<LinearLayout
						android:id="@+id/linear9"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:orientation="horizontal"
						android:layout_weight="1"/>
					<LinearLayout
						android:id="@+id/linear13"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/item"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							<ImageView
								android:id="@+id/imageview7"
								android:layout_width="25dp"
								android:layout_height="wrap_content"
								android:layout_marginRight="15dp"
								android:src="@drawable/icons_search"
								android:scaleType="centerInside"/>
							<ImageView
								android:id="@+id/imageview12"
								android:layout_width="23dp"
								android:layout_height="wrap_content"
								android:layout_marginRight="15dp"
								android:src="@drawable/menu"
								android:scaleType="centerInside"/>
						</LinearLayout>
						<ImageView
							android:id="@+id/imageview13"
							android:layout_width="25dp"
							android:layout_height="wrap_content"
							android:layout_marginRight="15dp"
							android:src="@drawable/refresh_icon"
							android:scaleType="centerInside"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/retry_layout"
				android:layout_width="match_parent"
				android:layout_height="40dp"
				android:background="#B2FF59"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/imageview1"
					android:layout_width="wrap_content"
					android:layout_height="35dp"
					android:src="@drawable/noconnection"
					android:scaleType="centerInside"/>
				<TextView
					android:id="@+id/textview1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Please check your internet connection "
					android:textSize="14sp"
					android:textColor="#FF1744"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ProgressBar
					android:id="@+id/progressbar1"
					android:layout_width="60dp"
					android:layout_height="50dp"
					android:padding="8dp"
					android:indeterminate="false"
					style="?android:progressBarStyle"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/screen3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#DBDEE3"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/linear12"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview6"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Nothing Saved Yet"
						android:textSize="16sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<ListView
					android:id="@+id/listview3"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#DBDEE3"
					android:dividerHeight="0dp"
					android:divider="@null"
					android:choiceMode="none"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/screen4"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#DBDEE3"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:background="#FFFFFF"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/textview5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="Nothing Download Yet"
						android:textSize="16sp"
						android:textColor="#000000"/>
				</LinearLayout>
				<ListView
					android:id="@+id/listview4"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#DBDEE3"
					android:dividerHeight="0dp"
					android:divider="@null"
					android:choiceMode="none"/>
			</LinearLayout>
			<ListView
				android:id="@+id/listview1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF"
				android:dividerHeight="0dp"
				android:divider="@null"
				android:choiceMode="none"
				android:layout_weight="1"/>
			<LinearLayout
				android:id="@+id/screen2_cato"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#FFFFFF"
				android:orientation="vertical"
				android:layout_weight="1">
				<ListView
					android:id="@+id/listview2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:padding="8dp"
					android:choiceMode="none"/>
				<LinearLayout
					android:id="@+id/grid_layout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#DBDEE3"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear3"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:background="#FFFF00"
				android:orientation="horizontal">
				<LinearLayout
					android:id="@+id/latest_"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<ImageView
						android:id="@+id/imageview8"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/play"
						android:scaleType="centerInside"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/category_"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<ImageView
						android:id="@+id/imageview9"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/light_icon_1"
						android:scaleType="centerInside"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/favorite_"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<ImageView
						android:id="@+id/imageview10"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/light_icon_2"
						android:scaleType="centerInside"/>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/download_"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:padding="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<ImageView
						android:id="@+id/imageview11"
						android:layout_width="30dp"
						android:layout_height="30dp"
						android:src="@drawable/light_icon_4"
						android:scaleType="centerInside"/>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<android.support.design.widget.FloatingActionButton
		android:id="@+id/_fab"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp"
		android:layout_marginRight="16dp"
		android:layout_marginBottom="58dp"
		android:layout_gravity="center_horizontal|bottom"
		app:srcCompat="@drawable/ic_expand_more_white"/>
</android.support.design.widget.CoordinatorLayout>
